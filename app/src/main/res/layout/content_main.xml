<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.mchis.engeneeraplication2.MainActivity"
    >

    <Button
        android:text="Stan magazynu"
        android:layout_width="wrap_content"
        android:id="@+id/btnStanMagazynu"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:onClick="StanBtnOnClick"
        android:layout_height="100dp" />
    <Button
        android:text="Produkt"
        android:layout_width="wrap_content"
        android:id="@+id/btnProdukt"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:onClick="ProduktBtnOnClick"
        android:layout_height="100dp" />
    <Button
        android:text="PrzyjÄ™cie"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btnPrzyjecie"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:onClick="PrzyjecieBtnOnClick" />

    <Button
        android:text="Wydanie"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btnWydanie"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:onClick="WydanieBtnOnClick" />



    <Button
        android:text="Dokumenty"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btnDokumenty"
        android:layout_gravity="fill"
        android:layout_columnWeight="1" />
    <Button
        android:text="Inwentaryzacja"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btnInwentaryzacja"
        android:layout_gravity="fill"
        android:layout_columnWeight="1" />
    <Button
        android:text="Informacje"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btnInformacje"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"/>
    <Button
        android:text="Opcje"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/btnOpcje"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"/>


</GridLayout>
